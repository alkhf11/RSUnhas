<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg2"
    tools:context=".MenuUtama">

    <ImageView
        android:id="@+id/image"
        android:onClick="kembali"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/back"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/image"
        android:textAlignment="center"
        android:text="RS UNHAS APP"
        android:textSize="45dp"
        android:textColor="@color/white"
        android:fontFamily="@font/font2" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview1"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:text="halo, Selamat Datang di RS Unhas App"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:fontFamily="casual" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@id/textview2"
        android:layout_above="@id/textview3"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn1"
            android:layout_width="370dp"
            android:layout_height="90dp"
            android:backgroundTint="@color/white"
            android:onClick="tentang"
            android:text="Tentang RS"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="375dp"
            android:layout_height="90dp"
            android:layout_below="@+id/btn1"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/white"
            android:onClick="dokter"
            android:text="Poliklinik dan dokter"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="375dp"
            android:layout_height="90dp"
            android:layout_below="@+id/btn2"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/white"
            android:onClick="kamar"
            android:text="kamar tersedia"
            android:textColor="@color/black" />


    </LinearLayout>
    <TextView
        android:id="@+id/textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="RS UNHAS APP"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/font2" />

</RelativeLayout>