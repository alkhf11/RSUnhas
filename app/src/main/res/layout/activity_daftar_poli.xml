<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".DaftarPoli">

    <ImageView
        android:id="@+id/image"
        android:onClick="kembali"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/back"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"
        android:text="DAFTAR POLI"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/poliumum"
        android:onClick="poliumum"
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:layout_below="@+id/text1"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="Poli Umum"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"/>


    <Button
        android:id="@+id/poliobgin"
        android:onClick="poliobgin"
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:layout_below="@+id/poliumum"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="Poli Obgin"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"/>

    <Button
        android:id="@+id/politht"
        android:onClick="politht"
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:layout_below="@+id/poliobgin"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="Poli Tht"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"/>


</RelativeLayout>